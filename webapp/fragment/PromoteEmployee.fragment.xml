<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="{i18n>promoteEmployee}">
        <content>
            <f:Form>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>promoteEmployeeSalary}">
                                <f:fields>
                                    <Input value="{newRise>/Ammount}" id="promoteEmployeeSalaryAmmountId"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>promoteEmployeeDate}">
                                <f:fields>
                                    <DatePicker dateValue="{newRise>/CreationDate}"></DatePicker>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>promoteEmployeeComment}">
                                <f:fields>
                                    <TextArea value="{newRise>/Comments}"></TextArea>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <buttons>
            <Button text="{i18n>promoteEmployeeOK}" press="addRise"></Button>
            <Button text="{i18n>promoteEmployeeCancel}" press="onCloseRiseDialog"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>